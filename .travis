sudo: required
dist: trusty
language: go
env:
  - GIMME_OS=linux GIMME_ARCH=amd64 KERNEL=4.1.17
go:
  - 1.6
before_install:
  # Install the arm32 cross-compiler
  - sudo apt-add-repository 'deb http://archive.ubuntu.com/ubuntu vivid main'
  - sudo apt-get update -qq
  - sudo apt-get install -qq -y gcc-arm-linux-gnueabi
  - arm-linux-gnueabi-gcc --version
  - sudo apt-get install -qq -y gcc-arm-linux-gnueabihf
  - arm-linux-gnueabihf-gcc --version
  # Install golang
  - gimme 1.6
  # Correct rake bug
  - RAKE=`which rake`
  - mv `which rake` `which rake`.old
  - touch ${RAKE}
  - chmod 755 ${RAKE}
install:
  - glide install
  # Module build
  - source /home/travis/.gimme/envs/go1.6.env
  - which go
  - go version
  # Glide last
  - cd $TRAVIS_BUILD_DIR
  - githu
  - GOPATH=$TRAVIS_BUILD_DIR/import go get -u $(go list -f '{{join .Imports "\n"}}' ./... | sort | uniq | grep -v "org/jarvis" | grep -v "C")
  - cd $TRAVIS_BUILD_DIR/jarvis-go-core
  - ls -lrt
  - GOIMPORT=$TRAVIS_BUILD_DIR/import make all
deploy:
  provider: releases
  overwrite: true
  api_key: "$GITHUB_OAUTH2_KEY"
  file:
  - "${TRAVIS_BUILD_DIR}/jarvis-rest-module-0.0.1-SNAPSHOT.armel"
  - "${TRAVIS_BUILD_DIR}/jarvis-rest-module-0.0.1-SNAPSHOT.armhf"
  - "${TRAVIS_BUILD_DIR}/module.properties"
  skip_cleanup: true
  on:
    tags: true
    all_branches: true
after_deploy: echo "deploiement termin√©"
